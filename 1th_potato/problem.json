{
  "$schema": "../schema.json",
  "label": "hpc",
  "submit": {
    "form": {
      "files": [
        {
          "path": "answer.json",
          "label": "Answer",
          "type": {
            "metadata": {
              "items": [
                {
                  "key": "job_id",
                  "label": "Slurm JobID",
                  "type": {
                    "text": {}
                  }
                },
                {
                  "key": "password",
                  "label": "Cracked Password",
                  "type": {
                    "text": {}
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "judge": {
    "adapter": "hpc",
    "config": {
      "entrance": {
        "script": "judge.sh",
        "command": ""
      },
      "environment": {
        "tags": [],
        "exclude-tags": [],
        "script-limits": {
          "cpu": 200,
          "memory": 4096
        },
        "estimated-resource": {}
      }
    }
  }
}
